<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane onMouseClicked="#click" prefHeight="100.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.CellView">
    <Rectangle fx:id="open" arcHeight="5.0" arcWidth="5.0" fill="dimgray" height="100.0" stroke="BLACK" strokeType="INSIDE" width="100.0" />
    <Circle fx:id="bomb" radius="20.0" stroke="BLACK" strokeType="INSIDE" />
    <Label fx:id="number" alignment="CENTER" text="Label" textAlignment="CENTER" textFill="#00ff09" StackPane.alignment="CENTER">
        <font>
            <Font name="System Bold" size="38.0" />
        </font>
    </Label>
    <Rectangle fx:id="closed" arcHeight="5.0" arcWidth="5.0" fill="#70d43c" height="100.0" stroke="BLACK" strokeType="INSIDE" width="100.0" />
    <Circle fx:id="flag" fill="RED" radius="20.0" stroke="BLACK" strokeType="INSIDE" visible="false" StackPane.alignment="CENTER" />
   <ImageView fx:id="imgBomb" fitHeight="95.0" fitWidth="95.0" pickOnBounds="true" preserveRatio="true" visible="false">
      <image>
         <Image url="@../../../imgs/boomklein.png" />
      </image>
   </ImageView>
   <ImageView fx:id="imgFlag" fitHeight="95.0" fitWidth="95.0" layoutX="11.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" visible="false">
      <image>
         <Image url="@../../../imgs/flaggeklein.png" />
      </image>
   </ImageView>
</StackPane>
